{
    "name": "efrei/scheduler-tdd",
    "description": "Scheduler with TDD approach - Atelier",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Scheduler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scheduler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text"
    }
}